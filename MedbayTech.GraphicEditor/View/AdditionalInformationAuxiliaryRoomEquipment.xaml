<Page x:Class="MedbayTech.GraphicEditor.View.AdditionalInformationAuxiliaryRoomEquipment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedbayTech.GraphicEditor.View"
      mc:Ignorable="d" 
      d:DesignHeight="214" d:DesignWidth="274"
      Title="AdditionalInformationAuxiliaryRoomEquipment">

    <Grid>
        <DataGrid Name="dataGridEquipment" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn  Header="Item" Width="137" Binding="{Binding EquipmentType.Name}" />
                <DataGridTextColumn Header="Quantity" Width="137" Binding="{Binding QuantityInStorage}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
