                   AllowsTransparency="True"
                   HorizontalOffset="10"
                   VerticalOffset="10">

            <Grid>
                <local1:PopupPatientRoom x:Name="PatientRoom" Foreground="#E0FFFF"/>
            </Grid>
        </Popup>
        <Popup x:Name="PopupExaminationRoom"
                   AllowsTransparency="True"
                   HorizontalOffset="10"
                   VerticalOffset="10">

            <Grid>
                <local1:PopupExaminationRoom x:Name="ExaminationRoom" Foreground="#E0FFFF"/>
            </Grid>
        </Popup>
        <Popup x:Name="PopupOperatingRoom"
                   AllowsTransparency="True"
