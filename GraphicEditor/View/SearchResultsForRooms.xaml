<Page x:Class="GraphicEditor.SearchResultsForRooms"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphicEditor"
      mc:Ignorable="d" 
      d:DesignHeight="652" d:DesignWidth="766"
      Title="SearchResultsForRooms">

    <DockPanel>
        <Button DockPanel.Dock="Bottom" Name="btnShowOnMap" Width="300" Margin="0,5,0,5" Content="Shown on map" FontWeight="Bold" FontSize="18" Click="buttonShowOnMap" />
        <DataGrid DockPanel.Dock="Top" Name="dataGridRoom" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Room label" Width="149" Binding="{Binding RoomLabel}"/>
                <DataGridTextColumn Header="Room use" Width="149" Binding="{Binding RoomUse}"/>
                <DataGridTextColumn Header="Ward" Width="149" Binding="{Binding Department.Name}"/>
                <DataGridTextColumn Header="Floor" Width="149" Binding="{Binding Department.Floor}"/>
                <DataGridTextColumn Header="Building" Width="149" Binding="{Binding Department.Hospital.Name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
