<Page x:Class="GraphicEditor.View.AdditionalInformationAuxiliaryRoomEquipment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphicEditor.View"
      mc:Ignorable="d" 
      d:DesignHeight="175" d:DesignWidth="375"
      Title="AdditionalInformationAuxiliaryRoomEquipment">

    <Grid>
        <DataGrid Name="dataGridEquipment" AutoGenerateColumns="False" HorizontalAlignment="Center" VerticalAlignment="Top" Width="370" Height="175" RenderTransformOrigin="1.059,-0.838">
            <DataGrid.Columns>
                <DataGridTextColumn  Header="Item" Width="185" Binding="{Binding EquipmentType.Name}" />
                <DataGridTextColumn Header="Quantity" Width="185" Binding="{Binding QuantityInStorage}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
