<Page x:Class="GraphicEditor.SearchResultsForMedicines"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphicEditor"
      mc:Ignorable="d" 
      d:DesignHeight="652" d:DesignWidth="766"
      Title="SearchResultsForMedicines">

    <DockPanel>
        <Button DockPanel.Dock="Bottom" Name="btnShowOnMap" Width="300" Margin="0,5,0,5" Content="Shown on map" FontWeight="Bold" FontSize="18" Click="buttonShowOnMap"/>
        <DataGrid DockPanel.Dock="Top" Name="dataGridMedicate" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="149"/>
                <DataGridTextColumn Header="Name" Width="149"/>
                <DataGridTextColumn Header="Dosage" Width="149"/>
                <DataGridTextColumn Header="Quantity" Width="149"/>
                <DataGridTextColumn Header="Storige room" Width="149"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
