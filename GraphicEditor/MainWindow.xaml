<Window x:Class="GraphicEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor"
        mc:Ignorable="d"
              Title="Hospital floor plan" Height="720" Width="1024" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen" BorderBrush="#FFC13939">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="251*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Height="68" VerticalAlignment="Top" Background="#006481" Grid.ColumnSpan="2">
            <Label Content="Hospital map" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Georgia" FontWeight="UltraBold" FontSize="50" Foreground="White"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Height="650" VerticalAlignment="Top" Background="SteelBlue" Margin="0,68,742,0" Grid.ColumnSpan="2">
            <Label Content="Informations" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" FontSize="25" Foreground="White"/>
            <TabControl Height="281" Margin="0,0,18,0">
                <TabItem Header="Map" MouseLeftButtonDown="ShowHospitalMap">
                    <Grid Background="#FFE5E5E5">
                        <Label Content="Wards:" HorizontalAlignment="Left" Margin="132,-7,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold" Width="110" Height="35"/>
                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="132,28,0,0">
                            <ComboBoxItem Content="Radiology"/>
                            <ComboBoxItem Content="Neurology"/>
                            <ComboBoxItem Content="Oncology"/>
                            <ComboBoxItem Content="Cardiology"/>
                            <ComboBoxItem Content="Intesive care"/>
                            <ComboBoxItem Content="Gastroenterology"/>
                            <ComboBoxItem Content="Hematology"/>
                            <ComboBoxItem Content="Dialysis"/>
                            <ComboBoxItem Content="Rheumatology"/>
                            <ComboBoxItem Content="Infectous Diseases"/>
                        </ComboBox>
                        <Label Content="H1 Floors:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold" Width="120" Margin="0,-7,0,0"/>
                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="0,28,0,0">
                            <ComboBoxItem MouseLeftButtonDown="ShowBuilding1Floor" IsSelected="True" Content="Ground level"/>
                            <ComboBoxItem Content="First floor"/>
                            <ComboBoxItem Content="Secod floor"/>
                            <ComboBoxItem Content="Third floor"/>
                        </ComboBox>
                        <Label Content="H2 Floors:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold" Width="120" Margin="0,109,0,0"/>
                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="0,143,0,0">
                            <ComboBoxItem MouseLeftButtonDown="ShowBuilding2Floor" IsSelected="True" Content="Ground level"/>
                            <ComboBoxItem Content="First floor"/>
                            <ComboBoxItem Content="Secod floor"/>
                            <ComboBoxItem Content="Third floor"/>
                            <ComboBoxItem Content="Forth floor"/>
                        </ComboBox>
                    </Grid>
                </TabItem>
                <TabItem Header="H1" MouseLeftButtonDown="ShowBuilding1Floor">
                    <Grid Background="#FFE5E5E5">
                        <Label Content="Floors:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold" Width="120" Margin="0,-7,0,0"/>
                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="0,28,0,0">
                            <ComboBoxItem MouseLeftButtonDown="ShowBuilding1Floor" IsSelected="True">Ground level</ComboBoxItem>
                            <ComboBoxItem>First floor</ComboBoxItem>
                            <ComboBoxItem>Secod floor</ComboBoxItem>
                            <ComboBoxItem>Third floor</ComboBoxItem>
                        </ComboBox>
                        <Label Content="Wards:" HorizontalAlignment="Left" Margin="132,-7,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold" Width="110" Height="35"/>
                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="132,28,0,0">
                            <ComboBoxItem Content="Radiology"/>
                            <ComboBoxItem Content="Neurology"/>
                            <ComboBoxItem Content="Oncology"/>
                            <ComboBoxItem Content="Cardiology"/>
                            <ComboBoxItem Content="Intesive care"/>
                        </ComboBox>
                    </Grid>
                </TabItem>
                <TabItem Header="H2" MouseLeftButtonDown="ShowBuilding2Floor" >
                    <Grid Background="#FFE5E5E5">
                        <Label Content="Floors:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold" Width="120" Margin="0,-7,0,0"/>
                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="0,28,0,0">
                            <ComboBoxItem MouseLeftButtonDown="ShowBuilding2Floor" IsSelected="True">Ground level</ComboBoxItem>
                            <ComboBoxItem>First floor</ComboBoxItem>
                            <ComboBoxItem>Secod floor</ComboBoxItem>
                            <ComboBoxItem>Third floor</ComboBoxItem>
                            <ComboBoxItem>Forth floor</ComboBoxItem>
                        </ComboBox>
                        <Label Content="Wards:" HorizontalAlignment="Left" Margin="132,-7,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold" Width="110" Height="35"/>
                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="132,28,0,0">
                            <ComboBoxItem Content="Gastroenterology"/>
                            <ComboBoxItem Content="Hematology"/>
                            <ComboBoxItem Content="Dialysis"/>
                            <ComboBoxItem Content="Rheumatology"/>
                            <ComboBoxItem Content="Infectous Diseases"/>
                        </ComboBox>
                    </Grid>
                </TabItem>
            </TabControl>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="254,68,0,0" Grid.Column="1"/>

        <Frame Name="MainFrame" Margin="254,68,0,0" NavigationUIVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Column="1"/>
    </Grid>

</Window>
